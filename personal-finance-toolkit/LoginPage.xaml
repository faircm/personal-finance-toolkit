<Page x:Class="personal_finance_toolkit.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:personal_finance_toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Width="400" Height="260">
        <StackPanel>
            <TextBlock Text="Personal Finance Toolkit" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,20"/>
            <Label Content="Username" HorizontalAlignment="Center"/>
            <TextBox x:Name="usernameBox" Width="150px" Margin="0,0,0,10"/>
            <Label Content="Password" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="passwordBox" Width="150px" Margin="0,0,0,20"/>
            <Button x:Name="loginBtn" Content="Login" Width="50px" Click="loginBtn_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
